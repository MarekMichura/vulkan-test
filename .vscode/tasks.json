{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Check #pragma once",
      "type": "shell",
      "command": "find . -path ./build -prune -o \\( -name '*.hpp' -o -name '*.h' \\) ! -exec grep -q '^#pragma once' {} \\; -printf '%P\\n'",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}