{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Check #pragma once",
      "type": "shell",
      "command": "find . -path ${workspaceFolder}/build -prune -o \\( -name '*.hpp' -o -name '*.h' \\) ! -exec grep -q '^#pragma once' {} \\; -printf '%P\\n'",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
    },
    {
      "label": "Run clang-tidy",
      "type": "shell",
      "command": "clang-tidy",
      "args": [
        "-p",
        "${workspaceFolder}/build",
        "--config-file=${workspaceFolder}/.clang-tidy",
        "${workspaceFolder}/client/**/*.{cpp,hpp,h,c}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
      },
    },
    {
      "label": "Build windows",
      "type": "shell",
      "command": "cmake3 -B build-windows -S . -DCMAKE_TOOLCHAIN_FILE=toolchain-windows.cmake & cmake3 --build build-windows --config Debug",
      "group": "build"
    }
  ],
}