{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/${presetName}/",
      "installDir": "${sourceDir}/build/${presetName}/install/",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "FEATURES": ""
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}/",
      "installDir": "${sourceDir}/build/${presetName}/install/",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "FEATURES": ""
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "arch-x64",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "arch-x86",
      "hidden": true,
      "architecture": {
        "value": "x86",
        "strategy": "external"
      }
    },
    {
      "name": "debug-mode",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-mode",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "debug",
      "inherits": [
        "linux-base",
        "debug-mode"
      ]
    },
    {
      "name": "release",
      "inherits": [
        "linux-base",
        "release-mode"
      ]
    },
    {
      "name": "x64-debug",
      "inherits": [
        "windows-base",
        "arch-x64",
        "debug-mode"
      ]
    },
    {
      "name": "x64-release",
      "inherits": [
        "windows-base",
        "arch-x64",
        "release-mode"
      ]
    },
    {
      "name": "x86-debug",
      "inherits": [
        "windows-base",
        "arch-x86",
        "debug-mode"
      ]
    },
    {
      "name": "x86-release",
      "inherits": [
        "windows-base",
        "arch-x86",
        "release-mode"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "debug",
      "jobs": 12
    }
  ]
}